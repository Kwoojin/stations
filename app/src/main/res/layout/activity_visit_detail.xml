<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" android:paddingLeft="10dp"
        android:background="#3AA4FF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left">

            <Button
                android:id="@+id/back"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/back"
                android:textColor="#ffffff"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <apps.com.stations.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="여행지 상세"
                android:textColor="#ffffff"

                android:textSize="25dp" />

        </LinearLayout>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1000"
        android:background="#ffffff" android:id="@+id/my_scroll"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/border3"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <apps.com.stations.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical|right"
                            android:text="여행지명  "
                            android:textColor="#888888"
                            android:textSize="14dip" />

                        <apps.com.stations.CustomTextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="#000000"
                            android:textSize="15dp"></apps.com.stations.CustomTextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <apps.com.stations.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical|right"
                            android:text="노선  "
                            android:textColor="#888888"
                            android:textSize="14dip" />

                        <apps.com.stations.CustomTextView
                            android:id="@+id/region"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="#3AA4FF"
                            android:textSize="15dp"></apps.com.stations.CustomTextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <apps.com.stations.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:gravity="center_vertical|right"
                            android:text="카테고리  "
                            android:textColor="#888888"
                            android:textSize="14dip" />

                        <apps.com.stations.CustomTextView
                            android:id="@+id/cate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="#000000"
                            android:textSize="15dp"></apps.com.stations.CustomTextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border3"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <apps.com.stations.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:text="간단설명  "
                        android:textColor="#888888"
                        android:textSize="14dip" />

                    <apps.com.stations.CustomTextView
                        android:id="@+id/shorts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"></apps.com.stations.CustomTextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <apps.com.stations.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:text="주소  "
                        android:textColor="#888888"
                        android:textSize="14dip" />

                    <apps.com.stations.CustomTextView
                        android:id="@+id/store_addr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"></apps.com.stations.CustomTextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <apps.com.stations.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:text="전화번호  "
                        android:textColor="#888888"
                        android:textSize="14dip" />

                    <apps.com.stations.CustomTextView
                        android:id="@+id/store_tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"></apps.com.stations.CustomTextView>

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/call" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <apps.com.stations.CustomTextView
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:text="상세설명  "
                        android:textColor="#888888"
                        android:textSize="14dip" />

                    <apps.com.stations.CustomTextView
                        android:id="@+id/desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"></apps.com.stations.CustomTextView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="200dp"

                >

                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>





        </LinearLayout>


    </ScrollView>



</LinearLayout>