<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3AA4FF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <apps.com.stations.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp" android:text="정보수정" android:textColor="#ffffff" android:textSize="25dp"

                android:gravity="center" />

        </LinearLayout>


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"    android:paddingLeft="10dp"
                android:background="#f9f8f8"
                android:gravity="center_vertical" android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp" android:text="아이디"

                    android:gravity="center_vertical"
                    android:textColor="#3AA4FF"
                    android:textSize="15dp" />

                <apps.com.stations.CustomTextView
                    android:id="@+id/id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="아이디"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#f9f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp" android:text="닉네임"

                    android:gravity="center_vertical"
                    android:textColor="#3AA4FF"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f8f8"
                    android:gravity="center_vertical"
                    android:hint="닉네임을 입력하세요."
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#f9f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp" android:text="비밀번호"

                    android:gravity="center_vertical"
                    android:textColor="#3AA4FF"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f8f8"
                    android:gravity="center_vertical"
                    android:hint="비밀번호를 입력하세요."
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#f9f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp" android:text="비밀번호확인"

                    android:gravity="center_vertical"
                    android:textColor="#3AA4FF"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/pass_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f8f8"
                    android:gravity="center_vertical"
                    android:hint="비밀번호 확인을 입력하세요."
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#f9f8f8" android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp" android:text="이메일"

                    android:gravity="center_vertical"
                    android:textColor="#3AA4FF"
                    android:textSize="15dp" />

                <apps.com.stations.CustomTextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f8f8"
                    android:gravity="center_vertical"
                    android:hint="이메일을 입력하세요."

                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />


            </LinearLayout>




        </LinearLayout>

    </ScrollView>

    <apps.com.stations.CustomTextView
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
      android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="#A9DAFF"
        android:text="정보수정"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</LinearLayout>
