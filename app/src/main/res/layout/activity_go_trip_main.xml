<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3AA4FF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <apps.com.stations.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="여행가기"
                android:textColor="#ffffff"

                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/back"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/back"
                android:textColor="#ffffff"></Button>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sc"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:background="@drawable/i024" />


            </LinearLayout>

            <apps.com.stations.CustomTextView
                android:id="@+id/station_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"

                android:textColor="#000000"
                android:textSize="25dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/reg"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:background="@drawable/i025" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="40dp"  android:layout_marginTop="20dp" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="70dp" android:id="@+id/all"
                android:layout_height="40dp"
                android:background="@drawable/i026" />

            <ImageView

                android:layout_width="70dp" android:id="@+id/food"
                android:layout_height="40dp" android:layout_marginLeft="20dp"
                android:background="@drawable/i027" />

            <ImageView

                android:layout_width="70dp" android:id="@+id/cafe"
                android:layout_height="40dp" android:layout_marginLeft="20dp"
                android:background="@drawable/i028" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="40dp"  android:layout_marginTop="5dp" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="70dp" android:id="@+id/lesier"
                android:layout_height="40dp"
                android:background="@drawable/i029" />

            <ImageView

                android:layout_width="70dp" android:id="@+id/nature"
                android:layout_height="40dp" android:layout_marginLeft="20dp"
                android:background="@drawable/i030" />

            <ImageView

                android:layout_width="70dp" android:id="@+id/culture"
                android:layout_height="40dp" android:layout_marginLeft="20dp"
                android:background="@drawable/i031" />



        </LinearLayout>



        <apps.com.stations.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp" android:layout_marginTop="20dp"
            android:gravity="center" android:text="여행지 목록"

            android:textColor="#000000"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/main_search_bar_02"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/secrch_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" android:inputType="text"
                android:background="#00000000"
                android:paddingLeft="40dp"
                android:textColor="#000000"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/del"
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:orientation="vertical"
            android:padding="10dp">


            <ListView
                android:id="@+id/s_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#eeeeee"
                android:dividerHeight="1dip"
                android:fadingEdge="none"
                android:listSelector="#FFFFFF"
                android:scrollbars="none"
                android:scrollingCache="false"></ListView>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>
