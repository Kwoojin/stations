<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_rowid"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff" android:paddingLeft="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >


    <LinearLayout
        android:layout_width="0dp" android:layout_weight="1" android:orientation="vertical"
        android:layout_height="50dp">
        <apps.com.stations.CustomTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="25dp" android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18dp" />

        <apps.com.stations.CustomTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="25dp" android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:textSize="14dp" />


    </LinearLayout>







</LinearLayout>