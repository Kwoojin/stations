<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3AA4FF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <apps.com.stations.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="여행가기"
                android:textColor="#ffffff"

                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/back"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/back"
                android:textColor="#ffffff"></Button>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <apps.com.stations.CustomTextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="시간설정"
            android:textColor="#000000"
            android:textSize="25dp" />

        <apps.com.stations.CustomTextView
            android:id="@+id/station_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"

            android:textColor="#777777"
            android:textSize="22dp" />


        <ImageView
            android:id="@+id/add_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.45"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView

                android:layout_width="74dp"
                android:layout_height="40dp"
                android:background="@drawable/i034"
                android:layout_weight="0.08" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <apps.com.stations.CustomTextView
                    android:id="@+id/date_sc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/date_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cs_icon_02" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView

                android:layout_width="93dp"
                android:layout_height="40dp"
                android:background="@drawable/i035" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <apps.com.stations.CustomTextView
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/start_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cs_icon_02" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView

                android:layout_width="93dp"
                android:layout_height="40dp"
                android:background="@drawable/i036" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <apps.com.stations.CustomTextView
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/end_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cs_icon_02" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <apps.com.stations.CustomTextView

                android:layout_width="93dp"
                android:layout_height="40dp"
                android:background="@drawable/border7"
                android:gravity="center"
                android:text="알람"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff">

                <apps.com.stations.CustomTextView
                    android:id="@+id/alarm"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/alarm_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cs_icon_02" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/i032" />

            <ImageView

                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/i033" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
